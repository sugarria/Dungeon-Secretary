<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_add_buddy"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/lbl_add_buddy_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Add Yourself To User&apos;s Friend List:" />
     
    <EditText
        android:id="@+id/txt_add_buddy_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_add_buddy_email"
        android:hint="Enter User&apos;s Email"
        android:inputType="textEmailAddress" />
   
     <Button
         android:id="@+id/btn_add_buddy_done"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/txt_add_buddy_email"
         android:text="@string/btn_done" />

     <Button
         android:id="@+id/btn_add_buddy_add"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/txt_add_buddy_email"
         android:text="@string/btn_add" />

</RelativeLayout>
